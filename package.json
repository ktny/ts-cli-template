{
  "name": "ts-cli-template",
  "version": "0.1.0",
  "description": "A modern TypeScript CLI tool template with React Ink",
  "main": "dist/index.js",
  "bin": {
    "ts-cli-template": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "tsx watch src/cli.tsx",
    "build": "tsc",
    "start": "node bin/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepublishOnly": "npm run check-all && npm run build"
  },
  "keywords": [
    "cli",
    "typescript",
    "react-ink",
    "template",
    "command-line",
    "tool"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ktny/ts-cli-template.git"
  },
  "bugs": {
    "url": "https://github.com/ktny/ts-cli-template/issues"
  },
  "homepage": "https://github.com/ktny/ts-cli-template#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@jest/globals": "^30.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
